# general settings
auto-reload yes
max-items 50

# external browser
browser "open -a '/Applications/Arc.app' '%u'"

# Unbind default keys that conflict with vim
unbind-key ^D
unbind-key ^U
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key l
unbind-key g
unbind-key G

# Basic movement
bind-key j down
bind-key k up
bind-key h quit
bind-key l open

# Go to top/bottom
bind-key g home
bind-key G end

# Page up/down
bind-key ^D pagedown
bind-key ^U pageup
bind-key u pageup
bind-key d pagedown

# redefine standards
bind-key s sort
bind-key S rev-sort
bind-key w save

# solarized
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     cyan
color listfocus_unread   black     cyan
color info               default   black
color article            default   default

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
